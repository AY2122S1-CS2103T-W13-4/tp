@startuml
!include style.puml
skinparam defaultFontSize 20

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":MainParser" as MainParser LOGIC_COLOR
participant ":FriendCommandParser" as FriendCommandParser LOGIC_COLOR
participant ":UnlinkFriendCommandParser" as UnlinkFriendCommandParser LOGIC_COLOR
participant "command:UnlinkFriendCommand" as UnlinkFriendCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("friend --unlink draco -g Valorant")
activate LogicManager

LogicManager -> MainParser : parseCommand("friend --unlink draco -g Valorant")
activate MainParser

create FriendCommandParser
MainParser -> FriendCommandParser
activate FriendCommandParser

FriendCommandParser --> MainParser
deactivate FriendCommandParser

MainParser -> FriendCommandParser : parse(" --unlink draco -g Valorant")
activate FriendCommandParser

create UnlinkFriendCommandParser
FriendCommandParser -> UnlinkFriendCommandParser
activate UnlinkFriendCommandParser

UnlinkFriendCommandParser --> FriendCommandParser
deactivate UnlinkFriendCommandParser

FriendCommandParser -> UnlinkFriendCommandParser : parse("--unlink draco -g Valorant")
activate UnlinkFriendCommandParser

create UnlinkFriendCommand
UnlinkFriendCommandParser -> UnlinkFriendCommand
activate UnlinkFriendCommand

UnlinkFriendCommand --> UnlinkFriendCommandParser : command
deactivate UnlinkFriendCommand

UnlinkFriendCommandParser --> FriendCommandParser : command
deactivate UnlinkFriendCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
UnlinkFriendCommandParser -[hidden]-> FriendCommandParser
destroy UnlinkFriendCommandParser

FriendCommandParser --> MainParser : command
deactivate FriendCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
FriendCommandParser -[hidden]-> MainParser
destroy FriendCommandParser

MainParser --> LogicManager : command
deactivate MainParser

LogicManager -> UnlinkFriendCommand : command.execute()
activate UnlinkFriendCommand

UnlinkFriendCommand -> Model : unlinkFriend(friendToUnlink, game)
activate Model

Model --> UnlinkFriendCommand
deactivate Model

create CommandResult
UnlinkFriendCommand -> CommandResult
activate CommandResult

CommandResult --> UnlinkFriendCommand
deactivate CommandResult

UnlinkFriendCommand --> LogicManager : result
deactivate UnlinkFriendCommand

[<--LogicManager
deactivate LogicManager
@enduml